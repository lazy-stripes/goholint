// CB {{.Opcode | printf "%02X"}}: RES {{.Bit}},({{.Address}})			16 cycles
type {{name .}} struct {
	MultiStepsOp
}

func (op *{{name .}}) Tick() (done bool) {
	switch op.step {
	case 0:
		op.cpu.temp8 = op.cpu.Memory.Read(op.cpu.{{.Address}}())
		op.step++
	case 1:
		op.cpu.temp8 &= ^uint8(1 << {{.Bit}})
		op.cpu.Memory.Write(op.cpu.{{.Address}}(), op.cpu.temp8)
		done = true
	}
	return
}

